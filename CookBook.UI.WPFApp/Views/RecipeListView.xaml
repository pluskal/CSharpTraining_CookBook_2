<UserControl x:Class="CookBook.UI.WPFApp.Views.RecipeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:CookBook.UI.WPFApp.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:RecipeListViewModel, IsDesignTimeCreatable=False}"
             DataContext="{Binding RecipeListViewModel, Source={StaticResource ViewModelLocator}}"
             >
    <Grid>
        <ListView ItemsSource="{Binding Recipes}" />
    </Grid>
</UserControl>